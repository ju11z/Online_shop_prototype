@model IEnumerable<OrderV>
@{ 
    IEnumerable<Product> products = ViewBag.Products;

}

<div class="container" style="margin-top:30px;">
    <div class="row">
        <div class="col-md">
            @foreach (var order in Model)
                        {
                            //Product product=product.Where(p=>p.)
                            if (order.IsFramed == false)
                            {
                                Product product = products.Where(p => p.Id == order.ProductId).FirstOrDefault();
                                var name = product.Name;
                                var imageName = product.ProductImageName;
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/assets/img/Products/@imageName" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@name</h5>
                            <p class="card-text">Amount : @order.Amount</p>
                            <a asp-controller="Home" asp-action="IncreaseAmount" asp-route-id="@order.Id" class="btn btn-success">+</a>
                            <a asp-controller="Home" asp-action="DecreaseAmount" asp-route-id="@order.Id" class="btn btn-danger">-</a>


                            <p class="card-text"><small class="text-muted">Price : @order.TotalPrice</small></p>
                            <form method="post">
                                <button asp-controller="Home" asp-action="RemoveFromShoppingCart" type="submit" asp-route-id="@order.Id" class="btn btn-danger">Remove from shopping cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            }
            }
        </div>
        <div class="col-sm">
            <div class="d-flex justify-content-end">
                <form method="post">
                    <button type="submit" asp-controller="Home" asp-action="ShoppingCart" class="btn-primary">Make order</button>
                </form>
            </div>
            <div class="d-flex justify-content-end">
                <div>
                    <h3>
                        Order price : @ViewBag.OrderPrice
                    </h3>
                </div>
            </div>

        </div>

    </div>
    <div class="card-columns">
        
    </div>
</div>
        

