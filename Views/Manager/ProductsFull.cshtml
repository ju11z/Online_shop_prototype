@model IEnumerable<ProductA>
<div class="container" style="margin-top:30px;">
    <div class="row">
        <div class="col-md">
            @foreach (var product in Model)
            {

                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-4" >
                            <img class="card-img"  src="~/assets/img/Products/@product.ProductImageName"></img>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <h6 class="card-title">Total amount : @product.TotalAmount</h6>
                                <a asp-controller="Manager" asp-action="UpdateProduct" class="btn btn-primary" asp-route-id="@product.Id">Update product</a>
                                <form  method="post">
                                    <button type="submit" asp-controller="Manager" asp-action="DeleteProduct" class="btn btn-danger" asp-route-id="@product.Id">Delete product</button>
                                </form>
                                
                                <div>@ViewBag.DeleteErrorMessage</div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
        <div class="col-sm  d-flex justify-content-end">
            <form>
                <a asp-controller="Manager" asp-action="AddProduct" class="btn btn-primary">Add new product</a>
            </form>
        </div>
    </div>
</div>