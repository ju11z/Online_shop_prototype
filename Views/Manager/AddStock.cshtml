@model Stock
<div class="wrapper">
    <section class="section section-shaped section-lg">
        <div class="shape shape-style-1 bg-gradient-default">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
        </div>
        <div class="container pt-lg-7">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card bg-secondary shadow border-0">
                        <div class="card-header bg-white pb-5">
                            <h4 style="text-align:center">New stock</h4>
                        </div>
                        <div class="card-body px-lg-5 py-lg-5">
                            <form role="form" asp-action="AddStock" asp-controller="Manager" method="post" enctype="multipart/form-data">

                                <div class="form-group">
                                    <label asp-for="ProductId" class="col-sm-8">Product Name</label>
                                    <div class="input-group input-group-alternative mb-3">
                                        <select asp-for="ProductId" asp-items="@ViewBag.ProductsList" class="form-control"></select>
                                    </div>


                                </div>
                                <div class="form-group">
                                    <div class="input-group input-group-alternative mb-3">
                                        <input class="form-control" placeholder="Amount" type="text" asp-for="Amount">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DateSupplied" class="col-sm-4">Date</label>
                                    <div class="input-group input-group-alternative mb-3">
                                        <input class="form-control" asp-for="DateSupplied" />
                                    </div>
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mt-4">Add stock</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</div>