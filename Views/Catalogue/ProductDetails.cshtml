@model Product
    
    <div class="container" style="margin-top:30px;">

        <div class="row">
            <div class="col-md">
                <div class="col-sm">
                    <h3>
                        @Model.Name<h3>
                            <img class="card-img-top" src="~/assets/img/Products/@Model.ProductImageName" alt="Card image cap">
                </div>
            </div>
            <div class="col-sm">
                <h3>
                    <br />
                    <br />
                    @Model.Price rub<h3>
            </div>
            <div class="col-sm">
                <div class="d-flex justify-content-end">
                <form asp-controller="Catalogue" asp-action="ProductDetails" method="post" asp-route-id="@Model.Id">
                    <button style="max-width:300px;" type="submit" class="btn-primary">Add to basket</button>
                    <div>@ViewBag.ErrorMessage</div>
                </form>
                    </div>
            </div>
            

        </div>
