@model IEnumerable<Product>
<h3>Some tshirts from DB.</h3>
<div class="card-columns">
    @foreach(var tshirt in Model){
        <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="~/assets/img/Products/@tshirt.ProductImageName" alt="Card image cap">
        <div class="card-block">
            <h4 class="card-title">@tshirt.Name</h4>
            <p class="card-text">@tshirt.Price</p>
            <a asp-action="ProductDetails" asp-controller="Catalogue" asp-route-id="@tshirt.Id" class="btn btn-primary">Details</a>
        </div>
    </div>
    }



</div>
